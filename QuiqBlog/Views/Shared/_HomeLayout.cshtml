<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no" />
    <meta name="description" content="" />
    <meta name="author" content="" />

    <title>Clean Blog - Start Bootstrap Theme</title>

    <!-- Bootstrap core CSS -->
    <link href="~/vendor/bootstrap/css/bootstrap.min.css" rel="stylesheet">

    <!-- Custom fonts for this template -->
    <link href="https://fonts.googleapis.com/css?family=Lora:400,700,400italic,700italic" rel="stylesheet" type="text/css" />
    <link href="https://fonts.googleapis.com/css?family=Open+Sans:300italic,400italic,600italic,700italic,800italic,400,300,600,700,800" rel="stylesheet" type="text/css" />
    <link href="~/vendor/fontawesome-free/css/all.min.css" rel="stylesheet" type="text/css">


    <!-- Font Awesome icons (free version)
    <script src="https://use.fontawesome.com/releases/v5.15.3/js/all.js" crossorigin="anonymous"></script>-->
    <!-- Custom Style for this template-->
    <link href="~/css/clean-blog.min.css" rel="stylesheet" />

</head>

<body>

    <!-- Navigation-->
    @await Component.InvokeAsync("Navigation")


    <header class="masthead" style="background-image: url('@ViewData["HeaderImage"]'); height:50%;">
        <div class="overlay"></div>
        <div class="container">
            <div class="row">
                <div class="col-lg-8 col-md-11 mx-auto">
                    <div class="post-heading">
                        <h1>@ViewData["HeaderTitle"]</h1>
                        @if (ViewData["SubHeader"] is null)
                        {
                        <span class="meta">
                            Posted By
                            <a asp-controller="Home" asp-action="Author" asp-route-authorId="@ViewData["AuthorId"]">@ViewData["AuthorName"]</a>
                            on @ViewData["PostDate"]
                        </span>
                        }
                        else
                        {
                                <span class="subheading">@ViewData["SubHeader"]</span>
                        }
                    </div>
                </div>
            </div>
        </div>
    </header>

    <div class="content">
        @RenderBody()
    </div>

    @await Component.InvokeAsync("Footer")



    
    <!-- Core theme JS-->
    <script src="~/js/clean-blog.min.js"></script>
    <script src="~/vendor/jquery/jquery.min.js"></script>
    <script src="~/vendor/bootstrap/js/bootstrap.bundle.min.js"></script>
    @RenderSection("Scripts", required: false);
</body>
</html>
